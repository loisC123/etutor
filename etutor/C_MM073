#include<stdio.h>  
int main() {    
    int n,k,s = 0;  
    scanf("%d",&n);  
    scanf("%d",&k);    
    for(int i=0;i<n;i++){    
        if(i==0){    
            s = ((k+1)*2);    
        }    
        else{    
            s = ((s+1)*2);    
        }    
    }    
    printf("%d\n",s);    
}  
